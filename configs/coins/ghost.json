{
  "coin": {
    "name": "Ghost",
    "shortcut": "GHOST",
    "label": "Ghost",
    "alias": "Ghost"
  },
  "ports": {
    "backend_rpc": 20793,
    "backend_message_queue": 20792,
    "blockbook_internal": 9038,
    "blockbook_public": 9138
  },
  "ipc": {
    "rpc_url_template": "http://127.0.0.1:{{.Ports.BackendRPC}}",
    "rpc_user": "rpc",
    "rpc_pass": "rpc",
    "rpc_timeout": 25,
    "message_queue_binding_template": "tcp://127.0.0.1:{{.Ports.BackendMessageQueue}}"
  },
  "backend": {
    "package_name": "backend-ghost",
    "package_revision": "ghost-1",
    "system_user": "ghost",
    "version": "0.19.1.8",
    "binary_url": "https://github.com/ghost-coin/ghost-core/releases/download/v0.19.1.8/ghost-0.19.1.8-x86_64-linux-gnu.tar.gz",
    "verification_type": "gpg-sha256",
    "verification_source": "https://github.com/ghost-coin/ghost-core/releases/download/v0.19.1.8/SHA256SUMS.asc",
    "extract_command": "tar -C backend --strip 1 -xf",
    "exclude_files": [
      "bin/ghost-qt"
    ],
    "exec_command_template": "{{.Env.BackendInstallPath}}/{{.Coin.Alias}}/bin/ghostd -datadir={{.Env.BackendDataPath}}/{{.Coin.Alias}}/backend -conf={{.Env.BackendInstallPath}}/{{.Coin.Alias}}/{{.Coin.Alias}}.conf -pid=/run/{{.Coin.Alias}}/{{.Coin.Alias}}.pid",
    "logrotate_files_template": "{{.Env.BackendDataPath}}/{{.Coin.Alias}}/backend/*.log",
    "postinst_script_template": "",
    "service_type": "forking",
    "service_additional_params_template": "",
    "protect_memory": true,
    "mainnet": true,
    "server_config_file": "ghost.conf",
    "client_config_file": "ghost_client.conf"
  },
  "blockbook": {
    "package_name": "blockbook-ghost",
    "system_user": "blockbook-ghost",
    "internal_binding_template": ":{{.Ports.BlockbookInternal}}",
    "public_binding_template": ":{{.Ports.BlockbookPublic}}",
    "explorer_url": "",
    "additional_params": "",
    "block_chain": {
      "parse": true,
      "mempool_workers": 8,
      "mempool_sub_workers": 2,
      "block_addresses_to_keep": 300,
      "xpub_magic": 49990397,
      "slip44": 3,
      "additional_params": {
        "fiat_rates": "coingecko",
        "fiat_rates_params": "{\"url\": \"https://api.coingecko.com/api/v3\", \"coin\": \"ghost-by-mcafee\", \"periodSeconds\": 60}"
      }
    }
  },
  "meta": {
    "package_maintainer": "Julien Richard",
    "package_maintainer_email": "julien.richard@gmail.com"
  }
}
